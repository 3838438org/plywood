#!/bin/bash -eu

if grep -rq 'describe\.only' ./test
  then
    echo "describe.only found. Please update your test"
    exit 1
fi

if grep -rq 'it\.only' ./test
  then
    echo "it.only found. Please update your test"
    exit 1
fi

./compile

mocha \
  test/actions/* \
  test/datatypes/* \
  test/expression/* \
  test/external/* \
  test/helper/* \
  test/overall/* \
  test/parser/* \
  test/simulate/* \
  ;
